<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/application-context.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>

		<servlet-name>DashBoard</servlet-name>

		<servlet-class>com.excilys.computerdb.controller.DashBoard</servlet-class>

	</servlet>

	<servlet-mapping>

		<servlet-name>DashBoard</servlet-name>

		<url-pattern>/computerdb</url-pattern>

	</servlet-mapping>

	<servlet>

		<servlet-name>addcomputer</servlet-name>

		<servlet-class>com.excilys.computerdb.controller.AddComputerMenu</servlet-class>

	</servlet>

	<servlet-mapping>

		<servlet-name>addcomputer</servlet-name>

		<url-pattern>/addcomputer</url-pattern>

	</servlet-mapping>

	<servlet>

		<servlet-name>EditComputer</servlet-name>

		<servlet-class>com.excilys.computerdb.controller.EditComputer</servlet-class>

	</servlet>

	<servlet-mapping>

		<servlet-name>EditComputer</servlet-name>

		<url-pattern>/editcomputer</url-pattern>

	</servlet-mapping>

</web-app>